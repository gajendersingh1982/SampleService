{
  "variables": {
    "aws_region": "",
    "ami_name": "ami-tomcat-{{timestamp}}"
  },
  "builders": [
    {
      "name": "AWS AMI Builder - CIS",
      "profile": "mcbadge",
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/hvm-ssd/ubuntu-xenial-16.04-amd64-server-*",
          "root-device-type": "ebs",
          "architecture": "x86_64"
        },
        "owners": [
          "137112412989",
          "591542846629",
          "801119661308",
          "102837901569",
          "013907871322",
          "206029621532",
          "286198878708",
          "443319210888",
          "099720109477"
        ],
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "{{user `ami_name` | clean_resource_name}}",
      "tags": {
        "Name": "{{user `ami_name`}}"
      },
      "run_tags": {
        "Name": "{{user `ami_name`}}"
      },
      "run_volume_tags": {
        "Name": "{{user `ami_name`}}"
      },
      "snapshot_tags": {
        "Name": "{{user `ami_name`}}"
      },
      "ami_description": "Ubuntu Image with tomcat"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "../scripts/tomcat_packer.sh",
      "max_retries": 3
    }
  ]
}