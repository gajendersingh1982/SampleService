#!/usr/bin/env groovy

pipeline {
    agent any
        options { 
        timestamps()
        disableConcurrentBuilds()
        buildDiscarder logRotator(artifactNumToKeepStr: '', numToKeepStr: '2')
    }
    parameters {
        string defaultValue: 'Service', description: 'Repository Name', name: 'REPO', trim: true
        string defaultValue: 'master', description: 'Brach For Checkout', name: 'BRANCH', trim: true
        string defaultValue: 'arn:aws:rds:us-east-1:849611986161:snapshot:d-use1-gb-account-migration', description: 'Name of DB Snapshot', name: 'DB_SNAPSHOT', trim: true
        booleanParam defaultValue: false, description: 'Select if you want to delete infra', name: 'DESTROY'
    }
    environment {
        GIT_URL = "https://github.com/gajendersingh1982"
        AWS_CREDS = credentials('AWS_badgedev')
        AWS_DEFAULT_REGION="us-east-1"
        AWS_ACCESS_KEY_ID="${AWS_CREDS_USR}"
        AWS_SECRET_ACCESS_KEY="${AWS_CREDS_PSW}"
		DB_PASSWORD = credentials('DEV_DB_PASS')
    }
    stages {
        stage('Cleanup') {
            steps {
                cleanWs()
            }
        }
        
        stage('Checkout') {
            steps {
                git url: env.GIT_URL + "/" + params.REPO + "/", branch: params.BRANCH, credentialsId: env.GIT_CREDENTIALS_ID
                sh 'echo $PWD'
            }
        } 
        
        stage('Init') {
            steps {
                sh '''
                cd ./service-constant
                echo $PWD
                terraform init -backend-config="key=badge/dev/us-east-1/service-const/terraform.tfstate" -reconfigure
                '''
            }
        }
        
        stage('Plan') {
            steps {
                    sh '''
                    echo $PWD
                    cd ./service-constant
                    echo $PWD
                    '''

                script {
                    if (params.DESTROY == false) {
                       sh 'terraform plan -var="db_password=${DB_PASSWORD}" -var="db_snapshot=${DB_SNAPSHOT}" -var-file=./env/badgedev.tfvars'
                    }
                    else{
                        sh 'terraform plan -destroy -var="db_password=${DB_PASSWORD}" -var="db_snapshot=${DB_SNAPSHOT}" -var-file=./env/badgedev.tfvars'
                    }                    
                }
            }
        }
        
        stage('Apply') {
            when {
                expression {
                    params.DESTROY == false
                }
                beforeInput true
            }
            input {
                message "Review plan and continue to change Infra?"
                ok "Yes, we should."
                submitter "gajender,singh"
                parameters {
                    string(name: 'PERSON', defaultValue: 'Branch For Checkout', description: 'Continue to apply the chnages')
                }
            }
            steps {
                sh '''
                echo $PWD
                cd ./service-constant
                    
                '''
            }
        }

        stage('Destroy') {
            when {
                expression {
                    params.DESTROY == true
                }
                beforeInput true
            }
            input {
                message "You are about to destroy Infra?"
                ok "Yes, Pocceed."
                submitter "gajender,singh"
                parameters {
                    string(name: 'PERSON', defaultValue: 'Branch For Checkout', description: 'Continue to apply the chnages')
                }
            }
            steps {
                sh '''
                echo $PWD
                cd ./service-constant
                terraform destroy -auto-approve -var="db_password=${DB_PASSWORD}" -var="db_snapshot=${DB_SNAPSHOT}" -var-file=./env/badgedev.tfvars
                '''
            }
        }
    }
}